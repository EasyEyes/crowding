{
  "name": "threshold",
  "version": "0.0.1",
  "private": "true",
  "description": "Threshold Participant.",
  "main": "threshold.js",
  "scripts": {
    "setup": "npm run setup:preprocessor && npm run setup:psychojs",
    "setup:preprocessor": "pip install -r addons/legacy/requirements.txt && python addons/legacy/preprocessor.py experiment.csv && cp experiment.csv conditions/experiment.csv",
    "setup:psychojs": "cd psychojs && git checkout threshold-prod && npm i && npm run build:css && npm run build:js && cd ..",
    "format": "prettier --write \"**/*.{js,css,html,md}\"",
    "phrases": "node server/fetch-languages-sheets.js && git add components/i18n.js",
    "glossary": "node server/prepare-glossary.js && prettier --write parameters/glossary.ts && git add parameters/glossary.ts",
    "prepare": "husky install",
    "start": "webpack --env=development",
    "build": "webpack --env=production"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/EasyEyes/threshold.git"
  },
  "keywords": [
    "psychology"
  ],
  "author": "EasyEyes",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/EasyEyes/threshold/issues"
  },
  "homepage": "https://github.com/EasyEyes/threshold#readme",
  "devDependencies": {
    "@types/papaparse": "^5.3.1",
    "babel-loader": "^8.2.3",
    "clean-webpack-plugin": "^4.0.0",
    "css-loader": "^6.5.1",
    "googleapis": "^91.0.0",
    "husky": "^7.0.4",
    "lint-staged": "^11.2.6",
    "prettier": "^2.4.1",
    "style-loader": "^3.3.1",
    "ts-loader": "^9.2.6",
    "webpack": "^5.63.0",
    "webpack-cli": "^4.9.1",
    "xlsx": "^0.17.3"
  },
  "lint-staged": {
    "*.{js,css,html,md}": "prettier --write"
  },
  "dependencies": {
    "@babel/core": "^7.16.0",
    "papaparse": "^5.3.1",
    "typescript": "^4.4.4",
    "webfontloader": "^1.6.28"
  }
}
